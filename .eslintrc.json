{
  "env": {
    "node": true,
    "mocha": true,
    "es2021": true
  },
  "globals": {
    "process": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "require-await": "error",
    "keyword-spacing": 1,
    "object-curly-spacing": [
      "warn",
      "always",
      {
        "objectsInObjects": false
      }
    ]
  }
}